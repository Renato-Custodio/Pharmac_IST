<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/materialCardViewFilledStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="18dp"
    app:cardBackgroundColor="#00FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/pharmacy_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pharmacy Title"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/pharmacy_item_distance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pharmacy_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pharmacy description"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/pharmacy_item_distance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pharmacy_item_title" />

        <com.google.android.material.chip.Chip
            android:id="@+id/pharmacy_item_distance"
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:checkable="false"
            android:clickable="false"
            android:includeFontPadding="false"
            android:text="40m"
            android:textColor="#1D192B"
            android:textSize="14sp"
            android:textStyle="bold"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="#E8DEF8"
            app:chipEndPadding="6dp"
            app:chipIcon="@drawable/distance"
            app:chipIconTint="#1D192B"
            app:chipIconVisible="true"
            app:chipStartPadding="6dp"
            app:chipStrokeColor="#E8DEF8"
            app:chipSurfaceColor="#6750A4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textStartPadding="6dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
